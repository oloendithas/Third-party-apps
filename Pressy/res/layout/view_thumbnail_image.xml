<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="@drawable/loading_thumbnail_background" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageView android:id="@id/imgThumbnail" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
        <ProgressBar android:layout_gravity="center" android:id="@id/pgbLoadingThumbnail" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </FrameLayout>
    <ImageView android:layout_gravity="bottom|right|center" android:id="@id/imgThumbnailOverlay" android:background="#33000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_play" />
</FrameLayout>